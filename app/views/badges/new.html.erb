<h1><%= @character.name%></h1>
<%= form_with(scope: :badge, url: "/characters/#{@character.id}/badges/", method: 'post') do |f| %>
  <span>
    <%= select_tag(:badge_id, options_for_select(@badge_templates)) %>
    <!-- <%= select_tag(:badge_id, options_for_select([['josh', 1], ['Ben', 2]])) %> -->
  </span>
  <span>
    <%= f.submit "Give Badge" %>
  </span>
<% end %>
